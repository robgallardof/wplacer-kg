{
  "manifest_version": 3,
  "name": "KGlacer Companion",
  "version": "4.5",
  "description": "Keeps KGlacer connected to wplace.live and your local paint server.",
  "permissions": [
    "storage",
    "cookies",
    "alarms",
    "browsingData",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "http://[::1]/*",
    "http://localhost/*",
    "https://backend.wplace.live/",
    "https://wplace.live/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://wplace.live/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [],
      "matches": [
        "https://wplace.live/*"
      ]
    }
  ]
}
